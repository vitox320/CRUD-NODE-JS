<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>CRUD COM NODE</title>
    
</head>
<style>
    .grey-bg {
      background-color: #eee;
    }

    .bg-blue {
      background-color: #fefefe;
    }

    .label-size {
      font-size: 1.05em;
      font-weight: bold;
    }

    .ligh-label {
        font-weight: normal;
    }
  </style>
<body class="grey-bg">    
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">CRUD</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/consultacursos">Consultar Alunos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cursos">Cadastrar Aluno</a>
          </li>
        </ul>
      </div>
    </nav>
    <h1 class="mt-3 mb-3" style="text-align: center;">Editando Registros</h1>       
    <% data.forEach(function(details) { %>
        <div class="container">
            <div class="shadow p-5 my-5 bg-dark text-white">
                <div class="row">
                    <div class="col-md-12">
                        <div class="badge:empty">
                            <h2><small class="text-center">Registro de Alunos</small></h2>
                            <form action="/atualizar/<%= details._id %>" method="POST">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="Nome">Nome</label>
                                        <input type="Nome" class="form-control" name="nome" aria-describedby="nome" value="<%= details.nome %>">
                                        <small id="Nome" class="form-text text-muted"></small>
                                    </div>

                                     <div class="col-md-4">
                                        <label for="CPF">CPF</label>
                                        <input type="CPF" class="form-control" name="cpf" aria-describedby="cpf" value="<%= details.cpf %>">
                                        <small id="CPF" class="form-text text-muted"></small>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="Email">Email</label>
                                        <input type="Email" class="form-control" name="email" aria-describedby="email" value="<%= details.email %>">
                                        <small id="Email" class="form-text text-muted"></small>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="Telefone">Telefone</label>
                                        <input type="Telefone" class="form-control" name="telefone" aria-describedby="telefone" value="<%= details.telefone %>">
                                        <small id="Telefone" class="form-text text-muted"></small>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="Responsável">Responsável Financeiro</label>
                                        <input type="responsavel" class="form-control" name="responsavel" aria-describedby="responsavel" value="<%= details.responsavel %>">
                                        <small id="responsavel" class="form-text text-muted"></small>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="Curso">Curso</label>
                                        <select class="form-control" name="curso" value="<%= details.curso %>">
                                            <option></option>
                                            <option>Técnico de Informática</option>
                                            <option>Técnico em Segurança do Trabalho</option>
                                            <option>Técnico de Redes</option>
                                            <option>Técnico Em Mecânica</option>
                                            <option>Técnologo - Ánalise e Desenvolvimento de Sistemas</option>

                                        <select>
                                        
                                    </div>

                                    

                                    <div class="col-md-4">
                                        <label for="turno">Turno</label>
                                        <input type="turno" class="form-control" name="turno" aria-describedby="turno" value="<%= details.turno %>">
                                        <small id="turno" class="form-text text-muted"></small>
                                    </div>

                                    

                                    <div class="col-md-4">
                                        <label for="sexo">Sexo</label>
                                        <input type="sexo" class="form-control" name="sexo" aria-describedby="sexo" value="<%= details.sexo %>">
                                        <small id="sexo" class="form-text text-muted"></small>
                                    </div>
                                    <br/>
                                </div>
                                <button type="submit" class="btn badge-light">Cadastrar</button>
                                <a class="btn btn- mr-2 justify-content badge-light" href="/show" type="submit">Consulta</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <% }) %> 

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>